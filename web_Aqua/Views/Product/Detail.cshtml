@model web_Aqua.Context.Product
@{
	ViewData["Title"] = "Detail";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="py-3 bg-light">
	<div class="container">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="#">Home</a></li>
			<li class="breadcrumb-item"><a href="#">Danh sách sản phẩm</a></li>
			<li class="breadcrumb-item active" aria-current="page">Chi tiết sản phẩm</li>
		</ol>
	</div>
</section>

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg-white padding-y">
	<div class="container">

		<!-- ============================ ITEM DETAIL ======================== -->
		<div class="row">
			<aside class="col-md-6">
				<div class="card">
					<article class="gallery-wrap">
						<div class="img-big-wrap">
							<div> <a href="#"><img src="~/images/items/@Model.Avatar"></a></div>
						</div> <!-- slider-product.// -->
						<div class="thumbs-wrap">
							
							<a href="#" class="item-thumb"> <img src="~/images/items/15.jpg"></a>
							<a href="#" class="item-thumb"> <img src="~/images/items/15-1.jpg"></a>
							<a href="#" class="item-thumb"> <img src="~/images/items/15-2.jpg"></a>
							<a href="#" class="item-thumb"> <img src="~/images/items/15-1.jpg"></a>
						</div> <!-- slider-nav.// -->
					</article> <!-- gallery-wrap .end// -->
				</div> <!-- card.// -->
			</aside>
			<main class="col-md-6">
				<article class="product-info-aside">

					<h2 class="title mt-3">@Model.Name </h2>

					<div class="rating-wrap my-3">
						<ul class="rating-stars">
							<li style="width:80%" class="stars-active">
								<i class="fa fa-star"></i> <i class="fa fa-star"></i>
								<i class="fa fa-star"></i> <i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
							</li>
							<li>
								<i class="fa fa-star"></i> <i class="fa fa-star"></i>
								<i class="fa fa-star"></i> <i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
							</li>
						</ul>
						<small class="label-rating text-muted">132 reviews</small>
						<small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> @Model.Quantity - @Model.Inventory </small>
					</div> <!-- rating-wrap.// -->

					<div class="mb-3">
						<var class="price h4">@Model.Price</var>
						<span class="text-muted">Đã bao gồm thuế</span>
					</div> <!-- price-detail-wrap .// -->

					<p>
						@Model.ShortDiscription
					</p>


					<dl class="row">
						<dt class="col-sm-3">Xuất xứ</dt>
						<dd class="col-sm-9"><a href="#">@Model.BrandId</a></dd>

						<dt class="col-sm-3">Article number</dt>
						<dd class="col-sm-9">596 065</dd>

						<dt class="col-sm-3">Bảo hành</dt>
						<dd class="col-sm-9">2 năm</dd>

						<dt class="col-sm-3">Thời gian nhận hàng</dt>
						<dd class="col-sm-9">3-4 ngày</dd>

						<dt class="col-sm-3">Số lượng có sẵn</dt>
						<dd class="col-sm-9">@Model.Inventory</dd>
					</dl>

					<div class="form-row  mt-4">
						<div class="form-group col-md flex-grow-0">
							<div class="input-group mb-3 input-spinner">
								<div class="input-group-prepend">
									<button class="btn btn-light" type="button" id="button-plus"> + </button>
								</div>
								<input type="text" class="form-control" value="1">
								<div class="input-group-append">
									<button class="btn btn-light" type="button" id="button-minus"> &minus; </button>
								</div>
							</div>
						</div> <!-- col.// -->
						<div class="form-group col-md">
							<a href="#" class="btn  btn-primary">
								<i class="fas fa-shopping-cart"></i> <span class="text">Thêm giỏ hàng</span>
							</a>
							<a href="#" class="btn btn-light">
								<i class="fas fa-envelope"></i> <span class="text">Liên hệ </span>
							</a>
						</div> <!-- col.// -->
					</div> <!-- row.// -->

				</article> <!-- product-info-aside .// -->
			</main> <!-- col.// -->
		</div> <!-- row.// -->
		<!-- ================ ITEM DETAIL END .// ================= -->


	</div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
