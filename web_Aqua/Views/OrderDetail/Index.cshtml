@model List<web_Aqua.Context.Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int stt = 0;
}
<div class="card-body" style="max-width: 1080px; margin:0 auto; float:none; "  >

    <h1>Danh sách đơn hàng</h1>
    <div>
        <table class="table table-shopping-cart ">
            <thead class="text-muted">
                <tr class="small text-uppercase text-center">
                    <th scope="col">#</th>
                    <th scope="col">Mã đơn hàng</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">Ngày đặt hàng</th>
                    <th scope="col" max-width="150"></th>
                 </tr>
               
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @(stt=stt+1)
                        </td>
                        <td class="text-center">
                            @item.Name
                        </td>

                        @if (item.Status == 1)
                        {
                            <td class="text-center">
                                <span class="text-center badge badge-warning">Đang giao hàng</span>
                            </td>

                        }

                        else
                        {
                            <td class="text-center">
                                <span class="text-center badge badge-success">Hoàn thành</span>

                            </td>
                        }
                        <td class="text-center">
                            @item.CreatedOnUtc
                        </td>
                        <td style=" text-align:center;" class="row">

                            <a  asp-controller="OrderDetail" asp-route-orderid="@item.OrderId" asp-action="Detail" class="btn btn-success">
                                Xem chi tiết

                            </a>
                        </td>
                    </tr>
                }
        </table>
        @if (stt < 1)
        {
            <div class="text-center alert alert-danger">
                <h3>Không có đơn hàng</h3>

                <img src="~/images/noitem.jpg" />
            </div>
        }
    </div>

</div>


