@model web_Aqua.Context.Brand

@{
    ViewData["Title"] = "AddOrEdit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form method="post" enctype="multipart/form-data" asp-controller="Brand" asp-action="AddOrEdit">
    @if (Model.BrandID > 0)
    {
        <div id="title">
            <h1> <a id="title" href="~/Admin/Brand"> Danh sách công ty</a> <a>/</a> Sửa thông tin</h1>
        </div>
    }
    else
    {
        <div id="title">
            <h1> <a id="title" href="~/Admin/Brand"> Danh sách công ty</a> <a>/</a> Thêm mới </h1>
        </div>
    }
    <hr color="#18b616" />
@*<form autocomplete="off" asp-controller="Product" asp-action="Edit">*@

        <div class="" style="max-width: 860px; margin:0 auto; float:none;">
              <div class="border border-light rounded">
                <div class="text-center  border border-light rounded">
                    <input type="hidden" asp-for="BrandID" class="form-control" />
                    <input type="hidden" asp-for="Avatar" class="form-control" />

                    @if (Model.BrandID < 1 || Model.Avatar == null)
                    {
                    <img id="imgViewer" class="profile-user-img img-fluid mt-2"
                         style=" max-width:350px;  max-height:350px; margin-bottom:10px; width:100%; height:auto;"
                         src="~/images/avatars/NoImage.jpg"
                         alt="ảnh danh mục" />
                    }
                    else
                    {
                    <img id="imgViewer" class="profile-user-img img-fluid mt-2"
                         style=" max-width:350px;  max-height:350px; margin-bottom:10px; width:100%; height:auto;"
                         src="~/images/brands/@Model.Avatar"
                         alt="ảnh danh mục" />
                        
                    }

                    <div class="form-group">
                        <div class="custom-file" style="max-width:350px">
                            <input class="custom-file-input "
                                   asp-for="ImageUpload"
                                   id="FLFrontImage"
                                   type="file" name="files"
                                   multiple
                                   onchange="document.getElementById('imgViewer').src = window.URL.createObjectURL(this.files[0])" />
                            <label asp-for="ImageUpload" for="FLFrontImage" class="custom-file-label">@Model.Avatar</label>
                        </div>
                    </div>

                 </div>
      
                <div class="mt-3">
                    <form class="form-horizontal ">
                        <div class="form-group row mx-2">
                            <label asp-for="BrandID" class="col-sm-2 col-form-label" id="label-column"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="BrandID" disabled />
                            </div>
                        </div>
                        <div class="form-group row mx-2">
                            <label asp-for="Company" class="col-sm-2 col-form-label" id="label-column"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="Company" />
                            </div>
                        </div>
                        <div class="form-group row mx-2">
                            <label asp-for="Nation" class="col-sm-2 col-form-label" id="label-column"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="Nation" />
                            </div>
                        </div>
                        <div class="form-group row mx-2">
                            <label asp-for="ShowOnHomePage" class="col-sm-2 col-form-label" id="label-column"></label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(m=>m.ShowOnHomePage, ViewBag.listBrandShow as SelectList, new {@class = "form-control"})
                            </div>
                        </div>                   
                    </form>

                </div>
               
            </div>
        <div class="form-group row mx-2 mt-3 text-center">
            <div class="col-sm-12" style="font-size:25px">
                <button value="Submit" type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-check px-1"> </i>  Lưu
                </button>
                @if (Model.BrandID > 0)
                {
                    <a asp-action="AddOrEdit" asp-route-id="" class="btn btn-success btn-lg m-2">
                        <i class="far fa-plus-square px-1"></i>  Thêm mới
                    </a>
                }
                <a asp-action="Index" class="btn  btn-secondary btn-lg">
                    <i class="fas fa-list px-1"></i>  Danh sách
                </a>
            </div>
        </div>
   </div>    
</form>
