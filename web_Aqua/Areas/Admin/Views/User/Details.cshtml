@model web_Aqua.Context.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Details" class="bg-white p-3">
    <div id="title">
        <h1> <a id="title" href="~/Admin/User"> Danh sách tài khoản</a> <a>/</a> Xem chi tiết </h1>
    </div>
    <hr color="#18b616" />
    <div class="" style="max-width: 860px; margin:0 auto; float:none;">
        <div class="border border-light rounded">
            <div class="text-center border border-light rounded">
            <input type="hidden" asp-for="UserId" class="form-control" />
            <input type="hidden" asp-for="Avatar" class="form-control" />

            @if (Model.Avatar !=null)
            {
                <img id="imgViewer" class="profile-user-img img-fluid mt-2"
                     style=" max-width:350px;  max-height:350px; margin-bottom:10px; width:100%; height:auto;"
                     src="~/images/users/@Model.Avatar"
                     alt="ảnh danh mục" />
            }
            else
            {
                <img id="imgViewer" class="profile-user-img img-fluid mt-2"
                     style=" max-width:350px;  max-height:350px; margin-bottom:10px; width:100%; height:auto;"
                     src="~/images/avatars/NoImage.jpg"
                     alt="ảnh danh mục" />
            }

            <div class="form-group">
                <div class="custom-file" style="max-width:350px">
                    <input class="custom-file-input "
                           asp-for="ImageUpload"
                           id="FLFrontImage"
                           type="file" name="files"
                           multiple
                           onchange="document.getElementById('imgViewer').src = window.URL.createObjectURL(this.files[0])" />
                    <label asp-for="ImageUpload" for="FLFrontImage" class="custom-file-label">@Model.Avatar</label>
                </div>
            </div>

        </div>
       
            <div class="mt-3">
                <form class="form-horizontal ">
                    
                    <div class="form-group row mx-2">
                        <label asp-for="FirstName" class="col-sm-3 col-form-label" id="label-column"></label>
                        <div class="col-sm-9">
                            <input class="form-control" asp-for="FirstName" disabled />
                        </div>
                    </div>
                    <div class="form-group row mx-2">
                        <label asp-for="LastName" class="col-sm-3 col-form-label" id="label-column"></label>
                        <div class="col-sm-9">
                            <input class="form-control" asp-for="LastName" disabled />
                        </div>
                    </div>
                    <div class="form-group row mx-2">
                        <label asp-for="Phone" class="col-sm-3 col-form-label" id="label-column"></label>
                        <div class="col-sm-9">
                            <input class="form-control" asp-for="Phone" disabled />
                        </div>
                    </div>
                     <div class="form-group row mx-2">
                        <label asp-for="Email" class="col-sm-3 col-form-label" id="label-column"></label>
                        <div class="col-sm-9">
                            <input class="form-control" asp-for="Email" disabled />
                        </div>
                    </div>
                   
                    <div class="form-group row mx-2">
                        <label asp-for="IsAdmin" class="col-sm-3 col-form-label" id="label-column"></label>
                        <div class="col-sm-9">
                            @Html.DropDownListFor(m=>m.IsAdmin, ViewBag.listUserShow as SelectList, new {@class = "form-control", @disabled = "disabled"} )
                        </div>
                    </div>
                    <div class="form-group row mx-2">
                        <label asp-for="CreateOnUtc" class="col-sm-3 col-form-label" id="label-column"></label>
                        <div class="col-sm-9">
                            <input class="form-control" asp-for="CreateOnUtc" disabled />
                        </div>
                    </div>
                </form>

            </div>

        </div>
        <div class="form-group row mx-2 mt-3 text-center">
            <div class="col-sm-12" style="font-size:25px">
                <a asp-route-id="@Model.UserId" asp-action="AddOrEdit" class="btn btn-warning btn-lg">
                    <i class="far fa-edit"></i>  Chỉnh sửa
                </a>
                @if (Model.UserId > 0)
                {
                    <a asp-action="AddOrEdit" asp-route-id="" class="btn btn-success btn-lg m-2">
                        <i class="far fa-plus-square px-1"></i>  Thêm mới
                    </a>
                }
                <a asp-action="Index" class="btn  btn-secondary btn-lg">
                    <i class="fas fa-list px-1"></i>  Danh sách
                </a>
            </div>
        </div>
    </div>
</form>